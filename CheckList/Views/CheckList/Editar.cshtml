@model CheckList.ViewModel.CheckList.EditarViewModel

@{
    ViewData["Title"] = "Editar CheckList";
}

<div class="text-center">
    <h1 class="display-4">Editar uma CheckList</h1>
</div>

@if (@Model.msgErros != null)
{
    <ul>
        @foreach (var msgErro in @Model.msgErros)
        {
            <li>@msgErro</li>
        }
    </ul>            
}

<form action="Editar" method="post">
    
    <div class="form-group">
        <label for="Id">Id: </label>
        <input type="text" class="form-control" id="id"  name="id" value="@Model.id">
    </div>
    
    <div class="form-group">
        <label for="Nome">Nome: </label>
        <input type="text" class="form-control" id="Nome"  name="Nome" value="@Model.Nome">
    </div>
    <button type="submit" class="btn btn-primary">Editar </button>
</form>