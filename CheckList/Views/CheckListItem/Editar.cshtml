@model CheckList.ViewModel.CheckListItem.EditarViewModel

@{
    ViewData["Title"] = "Editar Item";
}

<div class="text-center">
    <h1 class="display-4">Editar um Item</h1>
</div>

<form action="Editar" method="post">
    
    <div class="form-group">
        <label for="Id">Id:</label>
        <input type="text" class="form-control" id="id"  name="id" value="@Model.id">
    </div>
    
    <div class="form-group">
        <label for="Titulo">Titulo: </label>
        <input type="text" class="form-control" id="titulo"  name="titulo" value="@Model.titulo">
    </div>
    
        
        <div class="form-group">
                <label for="checklistId">CheckList: </label>
                <select id="checklistId" name="checklistId">
                @if (@Model.CheckLists!= null)
                {
                    @foreach (var checkList in @Model.CheckLists)
                    {
                        <option value="@checkList.id">@checkList.nome</option>
                    }
                }
                </select>
            </div>
        <div class="form-group">
            <label for="SubItem">SubItem: </label>
            <select id="checklistItemId" name="checklistItemId">
                <option value="0">Nenhum</option>
                @if (@Model.Itens != null)
                {
                    @foreach (var item in @Model.Itens)
                    {
                        <option value="@item.id">@item.titulo</option>
                    }
                }
                
            </select>
        </div>
        
        <div class="form-group">
            <label for="Realizado">Realizado? </label>
            <select id="realizado" name="realizado">
                <option value="Sim">Sim</option>
                <option value="Nao">Não</option>
            </select>
        </div>
        
        <div class="form-group">
            <label for="DataRealizado">Se foi realizado, informe a data de relização:</label>
            <input type="date" class="form-control" id="dataRealizacao "  name="dataRealizacao">
        </div>
    
    <button type="submit" class="btn btn-primary">Editar </button>
</form>
